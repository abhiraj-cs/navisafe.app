rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read and write access to black spots for demonstration.
    // In a real application, you would want to restrict write access.
    match /black_spots/{spotId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      // WARNING: This currently allows any user to delete spots.
      // In a production app, this should be restricted to admin users
      // using authentication and custom claims.
      allow delete: if true;
    }
  }
}
